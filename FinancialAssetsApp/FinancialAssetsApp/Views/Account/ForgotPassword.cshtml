@model FinancialAssetsApp.Models.LoginModel
@{
    ViewData["Title"] = "Forgot password";
    Layout = null;
}
<link rel="stylesheet" href="~/css/forgpass.css">
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<body>
    <div class="wrapper">
        <form asp-action="ForgotPassword" method="post">
            <h1>Forgot Password</h1>
            <div class="input-box">
                <input type="text" name="username" placeholder="Enter your login" required>
                <i class='bx bx-run'></i>
            </div>
            <div class="input-box">
                <input type="password" name="newPassword" placeholder="Enter a new password" required>
                <i class='bx bx-shield-plus'></i>
            </div>

            <button type="submit" class="btn">Login</button>
            <div class="register-link">
                <p>
                    Do you remember your pass?
                    <a asp-controller="Account" asp-action="Login">Login</a>
                    <i class='bx bx-registered'></i>
                </p>
            </div>
        </form>
    </div>
</body>